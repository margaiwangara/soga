{
  "name": "soga",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "server": "yarn workspace @soga/server",
    "server:start": "yarn server start",
    "server:dev": "yarn server dev",
    "server:watch": "yarn server watch",
    "server:clean": "yarn server clean",
    "web": "yarn workspace @soga/web",
    "web:start": "yarn web start",
    "web:dev": "yarn web dev",
    "web:build": "yarn web build",
    "web:gen": "yarn web gen",
    "dev": "lerna run dev --stream",
    "build": "lerna run build --stream",
    "start": "lerna run start",
    "test": "jest --watchAll --notify --passWithNoTests"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
